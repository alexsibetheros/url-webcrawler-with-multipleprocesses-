#include <stdio.h>
#include <math.h>
#include "prime.h"
#include "list.h"
#include <ctype.h>
////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////
int get_next_prime(int num)/*Calculates next prime number*/
{    
    int prime;
    while(TRUE){

        if(num<=0){
            printf("The number you have entered is zero or negative.\n");
            break;
        }
        prime = num+ 1;
		if(prime%2 == 0 && prime!= 2){ 
            prime+=1;
        }
		while(!check_prime(prime)){
            prime+=2;
        }
        return prime;
    }
    return 0;
}
////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////
int check_prime(int num)/*Checks to see if current number is prime*/
{
    int i;
	double temp;
    if(num== 2){
        return TRUE;
    }
    if(num%2 == 0 || num <= 1){
        return FALSE;
    } 
	else{
		temp=num;
        for(i=3; i<= sqrt(temp); i+=2){
            if(num%i == 0){
                return FALSE;
            }
			temp=num;
        }
    }
	return TRUE;
}
////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////
int is_numeric(char *str) {/*1 is number 0 isn't*/
    char c; 
	if (*str) {
          while ((c=*str++)) {
                if (!isdigit(c)) 
					return 0;
          }
          return 1;
      }
      return 0;
}
